<%- layout('layout/boilerplate.ejs') %>

    <form action="/card/paymentpage" class="validated-form" method="POST" novalidate>
        <div class="mb-3">
            <label for="nameofreceiver" class="form-label">Name of receiver</label>
            <input type="text" class="form-control" id="nameofreceiver" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="amout" class="form-label">Amount</label>
            <input type="number" class="form-control" id="amout" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="cardnumber" class="form-label">Card Number</label>
            <input type="number" class="form-control" id="cardnumber" minlength="12" maxlength="12" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="cardholdername" class="form-label">Card Holder Name</label>
            <input type="text" class="form-control" id="cardholdername" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="cardexpirydate" class="form-label">Card Expiry Date</label>
            <input type="month" class="form-control" id="cardexpirydate" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="cvv" class="form-label">CVV</label>
            <input type="number" class="form-control" id="cvv" aria-describedby="cvvHelp" minlength="3" maxlength="3"
                required>
            <div id="cvvHelp" class="form-text">We'll never store your CVV Number.</div>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="note" class="form-label">Add a note</label>
            <input type="text" class="form-control" id="note">
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="cardcheckbox" required>
            <label class="form-check-label" for="cardcheckbox">Check me out</label>
        </div>
        <button type="submit" class="btn btn-primary btn-success">Pay Securely</button>
    </form>